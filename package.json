{
  "name": "lets-toast",
  "version": "1.0.0",
  "description": "Simple, customizable toast notifications",
  "main": "build/index.js",
  "scripts": {
    "build": "npm run clean-build-dir && npm-run-all --print-label --parallel build:*",
    "build:sass": "sass src/styles.scss build/lets-toast.css --no-source-map",
    "build:sass-min": "sass src/styles.scss build/lets-toast.min.css --no-source-map --style compressed",
    "build:babel": "babel ./src --out-dir build --extensions '.ts'",
    "build:typescript": "node_modules/typescript/bin/tsc --project tsconfig-build.json",
    "dev": "npm run clean-build-dir && npm-run-all --print-label --parallel dev:*",
    "dev:sass": "sass --watch src/styles.scss build/lets-toast.min.css",
    "dev:babel": "babel --watch ./src --out-dir build --extensions '.ts'",
    "dev:typescript": "node_modules/typescript/bin/tsc --project tsconfig-build.json --watch",
    "clean-build-dir": "rimraf build",
    "lint": "eslint --ext .ts tests src",
    "type-check": "node_modules/typescript/bin/tsc --noEmit --emitDeclarationOnly false",
    "pretest": "npm run --silent lint && npm run --silent type-check",
    "test": "jest --config jest.config.json",
    "posttest": "aud --production",
    "version": "auto-changelog && git add CHANGELOG.md",
    "postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\"",
    "prepublish": "not-in-publish || npm run prepublish-only",
    "prepublishOnly": "safe-publish-latest && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onosendi/lets-toast.git"
  },
  "keywords": [
    "notifications",
    "snackbar",
    "toast"
  ],
  "author": "Daniel Lindegren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onosendi/lets-toast/issues"
  },
  "homepage": "https://github.com/onosendi/lets-toast#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "aud": "^2.0.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-testing-library": "^5.0.5",
    "in-publish": "^2.0.1",
    "jest": "^27.5.1",
    "nanoid": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "safe-publish-latest": "^2.0.0",
    "sass": "^1.49.7",
    "typescript": "^4.5.5"
  }
}
